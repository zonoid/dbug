<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
	<name>plg_system_dbug</name>
	<author>Gerald R. Zalsos</author>
	<version>3.0.0</version>
	<description>PLG_SYSTEM_DBUG_XML_DESCRIPTION</description>

	<namespace path="src">Joomla\Plugin\System\Dbug</namespace>

	<files>
		<filename plugin="dbug">dbug.php</filename>
		<filename>index.html</filename>
		<folder>services</folder>
		<folder>src</folder>
		<folder>dbug</folder>
	</files>

	<media destination="plg_system_dbug" folder="assets">
		<folder>css</folder>
		<folder>js</folder>
		<filename>joomla.asset.json</filename>
	</media>

	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_dbug.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_dbug.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="only_debug"
						type="radio"
						default="1"
						label="PLG_SYSTEM_DBUG_FIELD_ONLY_DEBUG_LABEL"
						description="PLG_SYSTEM_DBUG_FIELD_ONLY_DEBUG_DESC"
				>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field
						name="type"
						type="list"
						label="PLG_SYSTEM_DBUG_FIELD_TYPE_LABEL"
						description="PLG_SYSTEM_DBUG_FIELD_TYPE_DESC"
						default="all"
				>
					<option value="all">PLG_SYSTEM_DBUG_FIELD_TYPE_OPTION_ALL</option>
					<option value="ip">PLG_SYSTEM_DBUG_FIELD_TYPE_OPTION_IPS</option>
					<option value="userid">PLG_SYSTEM_DBUG_FIELD_TYPE_OPTION_USERIDS</option>
					<option value="access">PLG_SYSTEM_DBUG_FIELD_TYPE_OPTION_ACCESS_LEVEL</option>
					<option value="usergroup">PLG_SYSTEM_DBUG_FIELD_TYPE_OPTION_USER_GROUPS</option>
				</field>

				<field
						name="ip"
						type="text"
						label="PLG_SYSTEM_DBUG_FIELD_IP_LABEL"
						description="PLG_SYSTEM_DBUG_FIELD_IP_DESC"
				/>

				<field
						name="userid"
						type="text"
						label="PLG_SYSTEM_DBUG_FIELD_USERID_LABEL"
						description="PLG_SYSTEM_DBUG_FIELD_USERID_DESC"
				/>

				<field
						name="access"
						type="accesslevel"
						label="PLG_SYSTEM_DBUG_FIELD_ACCESS_LABEL"
						description="PLG_SYSTEM_DBUG_FIELD_ACCESS_DESC"
				/>

				<field
						name="usergroup"
						type="usergrouplist"
						multiple="true"
						label="PLG_SYSTEM_DBUG_FIELD_USERGROUP_LABEL"
						description="PLG_SYSTEM_DBUG_FIELD_USERGROUP_DESC"
				/>
			</fieldset>
		</fields>
	</config>
</extension>